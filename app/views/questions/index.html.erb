<h1 class='md-4'>Qustions<h1>

<%= link_to 'New Question', new_question_path, class: 'btn btn-primary btn-lg mb-4' %>

<% @questions.each do |question| %>
<article class='card mb-3'>
    <div class='card-body'>
        <h4><%= question.title %></h4>

        <section>
            <time datetime="<% question.formatted_createda_at %>" > 
              <smail><%= question.formatted_createda_at %></smail>  
            </time>
        </section>

        <p class='my-2'>
            <%= question.body %> <br>   
        </p>

        <%= link_to 'Show', question_path(question.id), class: 'btn btn-primary' %> 
        <%= link_to 'Edit', edit_question_path(question.id), class: 'btn btn-secondary' %>  
        <%= link_to 'Destroy', question_path(question.id), data: {method: :delete, confirm: 'are you sure ?' }, class: 'btn btn-danger' %>
    </div>
</article>

<% end %>


